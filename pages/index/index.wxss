/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-color: #FFF;
}

.avatar {
  transform: translate(-250rpx, -150rpx) scale(0.7, 0.7);
  transition: transform 1s 1.5s;
  animation: 2s linear 2.5s infinite rotateImg;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200rpx;
}

.content {
  position: relative;
  z-index: 10;
}

.bg {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
}

@keyframes rotateImg {
  from {
    transform: translate(-250rpx, -150rpx) scale(0.7, 0.7) rotate(0);
  }

  to {
    transform: translate(-250rpx, -150rpx) scale(0.7, 0.7) rotate(360deg);
  }
}